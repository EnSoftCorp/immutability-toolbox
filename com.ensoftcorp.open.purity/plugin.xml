<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   
   <!-- define command some handler extensions -->
   <extension
	      point="org.eclipse.ui.handlers">
	   <handler
	         commandId="com.ensoftcorp.open.purity.menus.runPurityAnalysisCommand"
	         class="com.ensoftcorp.open.purity.handlers.RunPurityAnalysisHandler">
	   </handler>
	</extension>
	
	<extension
	      point="org.eclipse.ui.handlers">
	   <handler
	         commandId="com.ensoftcorp.open.purity.menus.editPurityPreferencesCommand"
	         class="com.ensoftcorp.open.purity.handlers.PurityPreferencesHandler">
	   </handler>
	</extension>
   
   <!-- extend the Atlas Toolbox menu with a new submenu for purity analysis -->
	<extension
	      point="org.eclipse.ui.menus">
	   <menuContribution
	         locationURI="menu:com.ensoftcorp.open.commons.menus.toolbox?after=additions">
	      <menu
	            label="Purity Analysis"
	            id="com.ensoftcorp.open.purity.menus.purityMenu">
	         <command
	               commandId="com.ensoftcorp.open.purity.menus.runPurityAnalysisCommand"
	               label="Run Purity Analysis"
	               id="com.ensoftcorp.open.purity.menus.runPurityAnalysisCommandMenuItem">
	         </command>
	         <command
	               commandId="com.ensoftcorp.open.purity.menus.editPurityPreferencesCommand"
	               label="Edit Preferences"
	               id="com.ensoftcorp.open.purity.menus.editPurityPreferencesCommandMenuItem">
	         </command>
	      </menu>
	   </menuContribution>
	</extension>
   
   <!-- create an initializer extension to initialize preferences -->
   <extension
      point="org.eclipse.equinox.preferences.preferences">
	   <initializer
	         class="com.ensoftcorp.open.purity.preferences.PurityPreferences">
	   </initializer>
	</extension>
   
   <!-- create a preferences menu item for purity analysis -->
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.ensoftcorp.open.purity.ui.PurityPreferencesPage"
            id="com.ensoftcorp.open.purity.ui.preferences"
            name="Purity Analysis">
      </page>
   </extension>

</plugin>